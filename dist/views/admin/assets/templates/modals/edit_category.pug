// Edit Category
#editCategoryModal.c_modal-wrap.hide
  .container
    .row
      .c_modal
        .c_modal-content.editCategory
          .modal-content
            .modal-content__header(style="margin-bottom: 1rem;")
              h4.small-title Редактирование категории
              span#editCategoryClose.modal-close
                i.material-icons close
            .modal-content__form
                form(action="/control-panel/categories/update" method="POST")
                    .input-field
                        input.id(style="color: gray;" type="text" name="id" required readonly)
                        label ID категории
                    .input-field
                        input.originalTitle(style="color: gray;" type="text" name="originalTitle" required readonly)
                        label Старое название категории
                    .input-field
                        input.title(placeholder="Введите новое название категории" type="text" name="title" required)
                        label Новое название категории
                    .input-field
                        textarea.type(placeholder="Введите тип аккаунтов" class="materialize-textarea" type="text" name="type" required)
                        label Тип аккаунтов
                    .input-field
                        select.img(name="img" required)
                            option(value="" disabled selected)
                                | Выберите иконку
                        label Иконка
                    .input-field
                        input.format(placeholder="Введите формат аккаунтов" type="text" name="format" required)
                        label Формат аккаунтов
                    .edit_success
                        button(type="submit" class="btn orange waves-effect" style="width: 100%;height:50px") Редактировать
// Edit Category END
