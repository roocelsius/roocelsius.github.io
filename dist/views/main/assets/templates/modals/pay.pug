// Pay Modal
#pay.c_modal-wrap.hide
  .container
    .row
      .c_modal
        .c_modal-content
          .modal-content
            .modal-content__header
              h4.small-title Оплатить товар
              span#payClose.modal-close
                i.material-icons close
            form
              .modal-content__fields
                .title-field
                  label(for='title') Наименование
                  input(name='title' readonly)
                .email-field
                  label(for='email') Ваш E-mail
                  input(required='' type='email' name='email')
                .payment-field
                  label(for='payment') Способ оплаты
                  select
                    option(value='qiwi' data-icon='../img/payments-icons/qiwi.svg') QIWI
              .modal-content__purchase
                button.purchase-btn.waves-effect.btn(type='submit' href='#') Перейти к оплате
// Pay Modal END
